    fastio;
    // Dont Forget memset

    // memset(dp , -1 , sizeof dp);
    int n , d ;
    cin >> n >> d ;

    vector<pair<int , int >> v(n);
    int mx = 0;

    for(auto &it : v)
        cin >> it.first >> it.second ;

    sort(v.begin() , v.end());


    int p1 = 0 , p2 = 0 ;
    int sum = 0 ;
    while(p2 < n){

        sum += v[p2].second ;
      //  debug(sum);
        while(v[p2].first - v[p1].first  >= d){//debug(v[p1].second);debug(sum);
                sum -= v[p1].second , p1 ++ ;

        }       // debug(sum);
        p2 ++ ;
        mx = max(mx , sum) ;
    }
    cout << mx ;
}
