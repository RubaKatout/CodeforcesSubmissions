const double eps = 1e-9 , PI = acos(-1) ;
const int N = 5005 , oo = INT_MAX , M = 2 , mod = 2004;

int32_t main(){
    // Dont forget memset

    int t ;
    cin >> t ;
    while(t--){
        string s ;
        cin >> s >> s;
        stack<char>st;
        int ans = 0;
        for(int i = 0; i < s.size() ; i++){
            char f = s[i];
            if(f == '(')
                st.push(f);
            else if(st.empty()){
                ans ++ ;
            s.push_back(f);

            }
            else st.pop();
        }
        cout << ans << endl ;

    }

}
