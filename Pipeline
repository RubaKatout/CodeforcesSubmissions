#define so(v) sort(v.begin(),v.end());
#define rev(v) reverse(v.begin(),v.end());
#define print(v) for(auto f:v)cout<<f<<" ";
#define rso(v) sort(v.rbegin(),v.rend());
/*ðŸ¥ºðŸ¥ºðŸ¥ºðŸ¥º
ðŸ¥ºðŸ¥ºðŸ¥ºðŸ¥º
ðŸ¥ºðŸ¥ºðŸ¥ºðŸ¥º
ðŸ¥ºðŸ¥ºðŸ¥ºðŸ¥º
*/


int main(){

ll a,s;
cin>>a>>s;
a--,s--;
ll hi=s,lo=1,md=(hi+lo)/2;
while(lo<=hi){
        ll ans=(s-md+1)*(md+s)/2;
    if(ans==a)break;

if(ans>a)lo=md+1;
else hi=md-1;
md=(lo+hi)/2;

}if(!a)cout<<0;
else if(!md)cout<<-1;
else
cout<<s-md+1;

return 0;}

